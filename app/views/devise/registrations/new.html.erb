<div class="container space-nav">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
     <div class="signup-form gen-signup-form">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs" id="session-form">
          <%= f.input :first_name, required: true, autofocus: true, placeholder: "First Name", label:false %>
          <%= f.input :last_name, required: true, autofocus: true, placeholder: "Last Name", label:false %>
          <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label:false %>
          <%= f.input :age, required: true, autofocus: true, placeholder: "What's your age?", label:false %>
          <%= f.input :gender, required: true, autofocus: true, placeholder: "What's your gender?", label:false %>
          <%= f.country_select :country, required: false, placeholder: "Where do you live?", label: false %>
          <%= f.input :university, required: true, autofocus: true, placeholder: "Which University are you attending?", label:false %>
          <%= f.input :picture, class: "space-auto", label: "Add a picture"%>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Password", label:false %>
          <%= f.input :password_confirmation, required: true, placeholder: "Confirm Password", label:false %>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="form-actions text-center">
              <%= f.button :submit, "Create Account", class: "gen-create-btn" %>
            </div>
          </div>
        </div>
        <% end %>

        <div class="margin-top-5">
          <div class="flex-inline">
            <%= check_box_tag("gen-check", "value", false, class: "gen-checkbox") %>
            <p>By accepting you agree with our terms and conditions</p>
          </div>
        </div>

        <div class="flex-inline">
          <p class="pad-left-10">Already have an account?</p>
          <%= link_to new_session_path(resource_name) do %>
            <p class="pad-left-5">Login here.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
