<div class="container space-nav">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
     <div class="signup-form gen-signup-form">
     <h2>Log in</h2>

     <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <div class="form-inputs" id="session-form">
         <%= f.input :email, required: false, autofocus: true %>
         <%= f.input :password, required: false %>
         <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
       </div>

       <div class="row">
         <div class="col-xs-12">
           <div class="form-actions text-center">
              <%= f.button :submit, "Login", class: "gen-create-btn" %>
           </div>
         </div>
       </div>
     <% end %>

     <div class="flex-inline">
       <p class="pad-left-10">Don't have an account?</p>
       <%= link_to new_user_registration_path do %>
         <p class="pad-left-5">Sign up here.</p>
       <% end %>
     </div>
      </div>
    </div>
  </div>
</div>
