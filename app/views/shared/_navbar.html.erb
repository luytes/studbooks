<div class="navbar-fixed navbar-add">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-brand" do %>
    <div class="genstudent-logo">
      <!-- <#%= image_tag "Studbook.png" %> -->
    </div>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-item">
        <div class="dropdown">
          <%= image_tag current_user.picture.present? || "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-menu", "data-toggle" => "dropdown" %>

          <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
            <li>
              <%= link_to dashboard_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "My Account") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <!-- Login and Signup Button -->
       <div class="navbar-item">
        <ul class="list-inline no-marg-bot navigation">
          <li class="space-right"><%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path %></li>
          <li class="space-right"><%= link_to t(".sign_in", default: "Login"), new_user_session_path %></li>
        </ul>
      </div>
<!--        <div class="navbar-item">
        <div class="dropdown">
          <p class="dropdown-toggle no-margin-bot navbar-button text-center" data-toggle="dropdown">Placeholder</p>
          <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
            <li><%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path %></li>
            <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path %></li>
          </ul>
        </div>
      </div> -->

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars fa-2x dropdown-toggle gen-ic" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
        <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path %></li>
        <li><%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path %></li>
      </ul>
    </div>
  </div>
</div>

<script>
  /* When the user clicks on the button,
  toggle between hiding and showing the dropdown content */
  function selectType() {
      document.getElementById("signup-choose").classList.toggle("show");
  }

  // Close the dropdown menu if the user clicks outside of it
  window.onclick = function(event) {
    if (!event.target.matches('.dropbtn')) {

      var dropdowns = document.getElementsByClassName("dropdown-content");
      var i;
      for (i = 0; i < dropdowns.length; i++) {
        var openDropdown = dropdowns[i];
        if (openDropdown.classList.contains('show')) {
          openDropdown.classList.remove('show');
        }
      }
    }
  }
</script>

